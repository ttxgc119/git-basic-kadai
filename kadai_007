# リストとディクショナリの初期化
weather_list = [
    "月曜日は晴れです",
    "火曜日は雨です",
    "水曜日は晴れです",
    "木曜日は晴れです",
    "金曜日は曇りです",
    "土曜日は曇りのち雨です",
    "日曜日は雷雨です"]

weather_dictionary = {
    "mon": "晴れ",
    "tue": "雨",
    "wed": "晴れ",
    "thu": "晴れ",
    "fri": "曇り",
    "sat": "曇りのち雨",
    "sun": "雷雨",
}

# リストから水曜日の天気を取り出し
print(weather_list[2])  # 水曜日はリストの3番目の要素

# ディクショナリから水曜日の天気を取り出し
print("水曜日は" + weather_dictionary["wed"] + "です")  # キー「wed」で水曜日の天気を取得
